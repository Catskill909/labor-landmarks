generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Landmark {
  id          Int      @id @default(autoincrement())
  name        String
  city        String
  state       String
  country     String?
  category    String
  description String
  address     String
  lat         Float
  lng         Float
  email       String?
  website     String?
  telephone   String?
  sourceUrl   String?  @unique
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
